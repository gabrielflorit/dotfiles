#
# User configuration sourced by interactive shells
#

# Source zim
if [[ -s ${ZDOTDIR:-${HOME}}/.zim/init.zsh ]]; then
  source ${ZDOTDIR:-${HOME}}/.zim/init.zsh
fi

# Enable python for neovim
export PATH=/usr/local/share/python:$PATH

# trash
alias rm='trash'

# term-img
alias i='term-img'

# bash
alias l='ls -ltG'

# Git
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias g='gac'
alias gcb='git checkout -b'
alias gc='git checkout'

# Brew
alias bi='brew install'

# Neovim
alias vim='NVIM_TUI_ENABLE_CURSOR_SHAPE=1 nvim -c DefaultWorkspace'
alias vimr='NVIM_TUI_ENABLE_CURSOR_SHAPE=1 nvim'
alias v='NVIM_TUI_ENABLE_CURSOR_SHAPE=1 nvim -O . . . -c DefaultWorkspace'
# alias v='NVIM_TUI_ENABLE_CURSOR_SHAPE=1 nvim -c DefaultLayout'

# Allow yarn globals to be executable
export PATH="$(yarn global bin):$PATH"

# Go
export GOPATH=$HOME/.go
export GOROOT=/usr/local/Cellar/go@1.7/1.7.5/libexec/
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
