#
# User configuration sourced by interactive shells
#

# Source zim
if [[ -s ${ZDOTDIR:-${HOME}}/.zim/init.zsh ]]; then
  source ${ZDOTDIR:-${HOME}}/.zim/init.zsh
fi

# # Enable python for neovim
# # This used to be on, but the latest brew says don't.
# # So I'll leave it here but turn it off.
# export PATH=/usr/local/share/python:$PATH

# trash
alias rm='trash'

# term-img
alias i='term-img'

# bash
alias l='ls -ltG'

# NPM
alias ni='npm i'
alias nis='npm install --save'

# Git
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias g='gac'
alias gcb='git checkout -b'
alias gc='git checkout'

# Brew
alias bi='brew install'

# Neovim
alias vim='nvim -c DefaultWorkspace'
alias vr='nvim -c RLayout'
alias v='nvim -O . . . -c DefaultWorkspace'
alias v2='nvim -O . . -c DefaultWorkspace'
alias vb='nvim -O . . . -c DefaultWorkspace -c BlockLayout'
alias vg='nvim -O . . . -c DefaultWorkspace -c GulpLayout'

# Python
alias serve='python -m SimpleHTTPServer 3000'

# FZF
export FZF_DEFAULT_COMMAND='ag -g ""'

# Allow yarn globals to be executable
export PATH="$(yarn global bin):$PATH"

# Go
export GOPATH=$HOME/.go
export GOROOT=/usr/local/Cellar/go@1.7/1.7.5/libexec/
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# AWS
export PATH=~/.local/bin:$PATH

alias rts='aws s3 cp ~/Documents/dev/analysis/ s3://wapo-graphics-r/gabriel/ --recursive --exclude "*" --include "*.html"'

